<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <a class="btn" href="/admin/add-supplier">
                    Add Supplier
                </a>
                <% if (suppliers.length > 0) { %>
                    <div class="grid">
                        <% for (let supplier of suppliers) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= supplier.name %>
                                    </h1>
                                </header>
                                <div class="card__content">
                                    <h2 class="product__price">
                                        <%= supplier.contactInfo %>
                                    </h2>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-supplier/<%= supplier.id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-supplier" method="POST">
                                        <input type="hidden" value="<%= supplier.id %>" name="supplierId">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                            </article>
                        <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Suppliers Found!</h1>
                    <% } %>
            </main>
            <%- include('../includes/end.ejs') %>